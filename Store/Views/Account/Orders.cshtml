@model IEnumerable<Store.Models.ViewModels.Account.OrdersForUserVM>

@if (!Model.Any())
{
    <h2 class="text-center">You have no orders.</h2>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderNumber)
            </th>
            <th>
                Order Details
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderNumber)
                </td>
                <td>
                    @foreach (var item2 in item.ProductsAndQuantity)
                    {
                        @item2.Key @:x @item2.Value
                        <br />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)&#36;
                </td>
            </tr>
        }

    </table>
}
